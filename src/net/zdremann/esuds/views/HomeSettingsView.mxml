<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark"
		title="Settings" creationComplete="init();" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
		import mx.collections.ArrayList;
		import mx.core.FlexGlobals;
		private function init():void
		{
			roomChooser.dataProvider = FlexGlobals.topLevelApplication.rooms;
			if (FlexGlobals.topLevelApplication.persistenceManager.getProperty("room"))
				roomChooser.selectedItem = FlexGlobals.topLevelApplication.persistenceManager.getProperty("room");
			this.addEventListener(KeyboardEvent.KEY_DOWN, onKeyDown_Handler);
		}
		
		protected function onKeyDown_Handler(e:KeyboardEvent):void 
		{
			switch(e.keyCode)
			{
			case Keyboard.BACK:
				navigator.popView();
				break;
			}
		}
		
		public function refresh():void
		{

		}
		
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:actionContent>
		
	</s:actionContent>
	<s:layout>
		<s:VerticalLayout horizontalAlign="justify" paddingBottom="20" paddingLeft="20" paddingTop="20" paddingRight="20" />
	</s:layout>
	<s:Label text="Choose desired room" styleName="Title"/>
	<s:List id="roomChooser" labelField="roomName" height="100%" change="FlexGlobals.topLevelApplication.persistenceManager.setProperty('room',roomChooser.selectedItem);navigator.popView();" />
</s:View>