<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
						   xmlns:s="library://ns.adobe.com/flex/spark"
						   skinClass="net.zdremann.esuds.skins.MyPopupSkin">
	<s:layout>
		<s:VerticalLayout gap="20"
						  paddingBottom="10"
						  paddingLeft="30"
						  paddingRight="30"
						  paddingTop="30"
						  horizontalAlign="center" />
	</s:layout>
	<fx:Script>
		<![CDATA[
		
			private var _message:String;
			import flash.display.DisplayObjectContainer;
			override public function open(owner:flash.display.DisplayObjectContainer, modal:Boolean = false):void 
			{
				super.open(owner, modal);
				Object(this.owner).owner.enabled = false;
			}
			
			override public function close(commit:Boolean = false, data:* = null):void 
			{
				super.close(commit, data);
				Object(this.owner).owner.enabled = true;
			}
			
			[Bindable]
			public function get errorMessage():String
			{
				return _message;
			}
			
			public function set errorMessage(value:String):void
			{
				_message = value;
			}
			
			private function onClick(commit:Boolean):void
			{
				close(commit);
			}
		]]>
	</fx:Script>

	<s:Label text="Error:" width="100%"  />
	<s:Label text="{errorMessage}" width="100%" textAlign="center" />
	<s:Button label="Close"  width="50%" click="onClick(false)" />

</s:SkinnablePopUpContainer>
