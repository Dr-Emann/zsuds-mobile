  <filename>zsuds-mobile</filename>
  <name>Washer Check</name>
  <android>
    <manifestAdditions><![CDATA[<manifest android:installLocation="auto">
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<application android:enabled="true">
       <activity android:excludeFromRecents="false">
            <intent-filter>
               <action android:name="android.intent.action.MAIN"/>
               <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
       </activity>
	<service android:name="CheckMachineAvailableService"></service>
    <service android:name="CheckMultiMachineAvailableService"></service>
    </application>
</manifest>]]></manifestAdditions>
  </android>
  <initialWindow>
    <title>Washer Check</title>
    <content>zsuds-mobile.swf</content>
    <visible>true</visible>
    <autoOrients>true</autoOrients>
    <!--<aspectRatio>landscape</aspectRatio>-->
    <fullScreen>false</fullScreen>
    <!--<renderMode>gpu</renderMode>-->
